    "homepage": "http://coreframework.in",
    "keywords": ["php", "framework", "Core", "Core PHP Framework", "Core Framework"],
    "support": {
        "issues": "https://github.com/core-framework/core/issues",
        "source": "https://github.com/core-framework/core"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "src/Core",
            "Core\\Tests\\": "Tests"
        },
        "files": [
            "src/Core/Helper/Helper.php"
        ]
    },
    "prefer-stable": true,
    "require": {
        "php": ">=5.4.0",
        "smarty/smarty": "~3.1.19",
        "composer/composer": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "4.3",
        "phpunit/DbUnit": "1.3.1",
        "mikey179/vfsStream": "^1.3.1"
    },
    "suggest": {
        "ext-apc": "Allows for faster performance of Core Framework through APC caching",
        "ext-opcache": "Allows for faster performance of Core Framework through opCache(Zend Optimizer+) caching. opCache requires php 5.5+"
    },
    "scripts": {
        "post-install-cmd": [

        ],
        "post-update-cmd": [

        ]
    }
